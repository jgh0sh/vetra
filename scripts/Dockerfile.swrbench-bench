FROM node:22-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-venv \
    python3-pip \
    git \
    ca-certificates \
  && rm -rf /var/lib/apt/lists/*

RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
ENV SWRBENCH_PYTHON="/opt/venv/bin/python"

RUN pip install --no-cache-dir --upgrade pip \
  && pip install --no-cache-dir \
    "openai>=1.0.0" \
    requests \
    tenacity \
    loguru \
    python-dateutil \
    numpy \
    tqdm

RUN /opt/venv/bin/python -c "import numpy, openai, requests, tenacity, loguru, dateutil"

WORKDIR /workspace
